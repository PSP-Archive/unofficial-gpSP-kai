# Global definitions

VERSION_MAJOR = 3
VERSION_MINOR = 2
VERSION_BUILD = 03

# コンパイル条件の設定

# カーネルアプリとユーザーアプリの切替 CFW3.60以上ではUSER_MODE=1が必須
USER_MODE = 1

# 拡張メモリの使用のON/OFF
M64_MODE = 1

# バージョン表記にtestとBUILD番号を含めるかどうかの設定
TEST_MODE = 1

# CコアによるCPUエミュレーションのON/OFF
C_CORE_MODE = 0

# WLANのON/OFF
ADHOC_MODE = 1

include Makefile.in

